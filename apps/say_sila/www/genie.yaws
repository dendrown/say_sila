<erl>

out(Arg) ->
   {ehtml, {img, [{src,   ["graph/", get_track(Arg), ".15.day.fear.png"]},
                  {class, <<"img-fluid">>},
                  {alt,   <<"Fear Analysis">>}]}}.


% -----------------------------------------------------------------------------
get_track(#arg{querydata = QryData}) ->
    %
    % FIXME: We need to parse the thing...really soon!
    case QryData of
        "track=cc"  -> <<"cc">>;
        _           -> <<"gw">>
    end.

</erl>
